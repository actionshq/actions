{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$ref": "#/definitions/Action",
    "definitions": {
        "Action": {
            "title": "Action",
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "apiVersion": {
                    "type": "string",
                    "const": "make.new/v1alpha1"
                },
                "kind": {
                    "type": "string",
                    "const": "Action"
                },
                "metadata": {
                    "$ref": "#/definitions/Metadata"
                },
                "spec": {
                    "$ref": "#/definitions/Spec"
                }
            },
            "required": [
                "apiVersion",
                "kind",
                "metadata",
                "spec"
            ]
        },
        "Metadata": {
            "title": "Metadata",
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "name": {
                    "type": "string"
                }
            },
            "required": [
                "name"
            ]
        },
        "Spec": {
            "title": "Spec",
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "iconClass": {
                    "type": "string"
                },
                "services": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/Service"
                    }
                }
            },
            "required": [
                "iconClass",
                "services"
            ]
        },
        "Service": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "provider": {
                    "type": "string"
                },
                "name": {
                    "type": "string"
                },
                "icon": {
                    "type": "string",
                    "format": "uri"
                },
                "triggers": {
                    "type": "array",
                    "items": {
                        "anyOf": [{ "$ref": "#/definitions/LinkTrigger" }]
                    }
                }
            },
            "required": [
                "icon",
                "name",
                "provider",
                "triggers"
            ],
            "title": "Service"
        },
        "LinkTrigger": {
            "title": "LinkTrigger",
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "type": {
                    "type": "string",
                    "const": "LinkTrigger"
                },
                "uri": {
                    "type": "string",
                    "format": "uri"
                }
            },
            "required": [
                "type",
                "uri"
            ]
        }
    }
}
